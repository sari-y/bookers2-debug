<h2></h2>

<table class="table">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <tr>
        <th><%= image_tag @user.get_profile_image, size:'100x100' %></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <tr>
        <th><%= image_tag @user.get_profile_image, size:'100x100' %></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>